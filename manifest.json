{
    "name": "Base64 In-Browser Decoder",
    "description": "Decodes on-site URLs that are encoded in Base64 and opens them in a new tab.",
    "version": "0.1",
    "manifest_version": 3,
    
    "permissions": [
        "contextMenus",
        "tabs"
    ],
    "action": {
        "default_icon": {
            "16": "/images/logo16.png",
            "32": "/images/logo32.png",
            "48": "/images/logo48.png",
            "128": "/images/logo128.png"
        }
    },
    "icons": {
        "16": "/images/logo16.png",
        "32": "/images/logo32.png",
        "48": "/images/logo48.png",
        "128": "/images/logo128.png"
    },
    "background":{
        "service_worker": "main.js"
    }
}